<Window x:Class="ServiceHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menú lateral -->
        <StackPanel Grid.Column="0" Background="#EEE">
            <TextBlock Text="Admin Menu" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Manage Students" Height="40"
              Click="OnManageStudents_Click" Margin="0,0,0,10"/>
            <Button Content="Manage Tutors"   Height="40"
              Click="OnManageTutors_Click"/>
        </StackPanel>

        <!-- Contenedor de páginas -->
        <Frame x:Name="MainFrame"
           Grid.Column="1"
           NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>

