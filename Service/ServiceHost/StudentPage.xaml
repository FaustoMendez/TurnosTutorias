<Page x:Class="ServiceHost.StudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Manage Students">
    <StackPanel Margin="10" Background="WhiteSmoke">

        <!-- Formulario de registro de estudiante -->
        <TextBlock Text="Register Student" FontWeight="Bold" Margin="0,0,0,5"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
            <Label Content="ID:"             VerticalAlignment="Center"/>
            <TextBox x:Name="TxtStudentId"       Width="100" Margin="5,0"/>
            <Label Content="First Name:"   VerticalAlignment="Center"/>
            <TextBox x:Name="TxtFirstName"       Width="100" Margin="5,0"/>
            <Label Content="Paternal Surname:" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtPaternalSurname" Width="100" Margin="5,0"/>
            <Label Content="Maternal Surname:" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtMaternalSurname" Width="100" Margin="5,0"/>
            <Label Content="Email:"        VerticalAlignment="Center"/>
            <TextBox x:Name="TxtEmail"           Width="150" Margin="5,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
            <Label Content="Password:"    VerticalAlignment="Center"/>
            <PasswordBox x:Name="TxtPassword"     Width="100" Margin="5,0"/>
            <Label Content="Major ID:"     VerticalAlignment="Center"/>
            <TextBox x:Name="TxtMajorId"        Width="50"  Margin="5,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
            <Label Content="Assign Tutor:" VerticalAlignment="Center"/>
            <ComboBox x:Name="CbTutors"
                DisplayMemberPath="FullName"
                SelectedValuePath="TutorId"
                Width="200" Margin="5,0"/>
            <Button Content="Register Student"
              Click="RegisterStudent_Click"
              Margin="10,0"/>
            <Separator Width="20"/>
            <Button Content="Refresh Tutors"
              Click="RefreshTutors_Click"/>
        </StackPanel>

        <TextBlock Text="All Students" FontWeight="Bold" Margin="0,0,0,5"/>
        <DataGrid x:Name="UsersGrid"
              AutoGenerateColumns="False"
              Height="250">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"              Binding="{Binding Matricula}"           Width="Auto"/>
                <DataGridTextColumn Header="First Name"     Binding="{Binding Nombre}"              Width="*"/>
                <DataGridTextColumn Header="Paternal Surname" Binding="{Binding ApellidoPaterno}"   Width="*"/>
                <DataGridTextColumn Header="Maternal Surname" Binding="{Binding ApellidoMaterno}"   Width="*"/>
                <DataGridTextColumn Header="Email"           Binding="{Binding Email}"              Width="*"/>
                <DataGridTextColumn Header="Major ID"        Binding="{Binding CarreraId}"          Width="Auto"/>
                <DataGridTextColumn Header="Tutor ID"        Binding="{Binding TutorId}"            Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

    </StackPanel>
</Page>
